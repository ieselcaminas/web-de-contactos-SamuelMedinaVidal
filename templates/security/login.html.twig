{% extends 'base.html.twig' %}

{% block title %}Iniciar Sesión{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="h3 mb-3 font-weight-normal text-center">Iniciar Sesión</h1>

            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <div class="card p-4 shadow-sm">
                <form action="{{ path('app_login') }}" method="post">
                    <div class="mb-3">
                        <label for="username" class="form-label">Email:</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" required autofocus/>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Password:</label>
                        <input type="password" id="password" name="_password" class="form-control" required/>
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" name="_remember_me" id="_remember_me" class="form-check-input">
                        <label class="form-check-label" for="_remember_me">Recuérdame</label>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button class="btn btn-primary w-100" type="submit">
                        Entrar
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}